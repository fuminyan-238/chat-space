.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      .side-bar__user-name__top-items__name
        = current_user.name
      .side-bar__user-name__top-items__icons
        = link_to new_group_path do
          %i.far.fa-edit
        = link_to edit_user_path(current_user) do
          %i.fas.fa-cog
  .side-bar__group
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), {class: "group-link"} do
          .side-bar__group__name
            = group.name
          .side-bar__group__message
            = group.show_last_message
        